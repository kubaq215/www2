<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Current Tenders</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css"> <!-- Ensure you have this CSS file for styling -->
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/tenders/past">Past Tenders</a></li>
            <li><a href="/tender/add">Add Tender</a></li>
        </ul>
    </nav>
    <h1>Current Tenders</h1>
    <% if (tenders.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% tenders.forEach((tender, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= tender.name %></td>
                        <td><%= new Date(tender.start_datetime).toLocaleString() %></td>
                        <td><%= new Date(tender.end_datetime).toLocaleString() %></td>
                        <td><a href="/tender/<%= tender.id %>">View Details</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No current tenders available.</p>
    <% } %>
</body>
</html>
